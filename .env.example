# ============================================
# AiGo Backend Environment Configuration
# ============================================
# Copy this file to .env and fill in the values

# ============ Application Settings ============
APP_NAME=AiGo
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# ============ Server Settings ============
HOST=0.0.0.0
PORT=8080
WORKERS=1

# ============ Security Settings ============
# IMPORTANT: Change this in production!
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ CORS Settings ============
# Comma-separated list is not supported, use JSON array format
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# ============ PostgreSQL Database Settings ============
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=aigo
POSTGRES_PASSWORD=aigo_password
POSTGRES_DB=aigo_db

# ============ Redis Settings ============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10
REDIS_DEFAULT_TTL=3600

# ============ Celery Settings ============
CELERY_BROKER_DB=1
CELERY_RESULT_DB=2

# ============ Amadeus API Settings ============
# Get your credentials at: https://developers.amadeus.com/
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_BASE_URL=https://test.api.amadeus.com

# ============ Google Maps API Settings ============
# Get your API key at: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_PLACES_API_KEY=your_google_places_api_key

# ============ Google Custom Search (Image API) Settings ============
# Set up Custom Search Engine at: https://programmablesearchengine.google.com/
GOOGLE_SEARCH_API_KEY=your_google_custom_search_api_key
GOOGLE_SEARCH_CX=your_custom_search_engine_id
GOOGLE_IMAGE_SEARCH_ENABLED=true
GOOGLE_IMAGE_CACHE_TTL=86400

# ============ OpenAI Settings ============
# Get your API key at: https://platform.openai.com/
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# Weather API (OpenWeatherMap)
# Sign up at: https://openweathermap.org/api
# Get API key from: https://home.openweathermap.org/api_keys
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Travelpayouts  
TRAVELPAYOUTS_TOKEN=your_travelpayouts_token
TRAVELPAYOUTS_MARKER=your_travelpayouts_token
TRAVELPAYOUTS_BASE_URL=https://api.travelpayouts.com

# ============ Logging Settings ============
LOG_LEVEL=INFO
LOG_FORMAT=json
